<resources>
    <style name="AppTheme" parent= "Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>

    </style>
    <style name= "CategoryCardStyle">
        <item name ="android:layout_marginBottom">4dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">10dp</item>

    </style>
    <style name="CategoryTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/overlock_sc</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="MainActHeaderStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/average</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DetailsCardText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/average</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Movie_Title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/aguafina_script</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
</resources>